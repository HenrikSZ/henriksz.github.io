mixin header-button(link, icon)
  a(href=link class="p-4 flex items-center justify-center hover:bg-slate-800")
    img(src=icon, class="lg:w-10 w-20 flex-1")

mixin project(title, technologies, link, description)
  div(class="mb-12")
    div(class="my-4")
      a(href=link class="text-5xl lg:text-3xl flex text-[#ebc462]" target="_blank")
        div #{title}
        img(src=require("../../assets/graphics/fa-goto.svg") class="w-4 h-4")
    div(class="lg:flex flex-none")
      div(class="p-2 pt-4 ml-6 lg:pb-4 pb-8 lg:pr-8 border-[#ebc462] lg:border-r-2 lg:border-b-0 border-b-2 lg:flex-1")
        ul(class="list-outside list-disc")
          each tech in technologies
            li(class="lg:text-lg text-4xl") #{tech}
      div(class="p-4 lg:pl-8 lg:pt-4 pt-8 lg:flex-5 text-3xl lg:text-xl") #{description}

html(lang="en")
  head
    title HenrikSZ
    link(href=require('../styles/index.css') rel='stylesheet')
  body(class="bg-[#460e0a] text-slate-100")
  div(class="flex items-center justify-center bg-black")
    div(class="flex gap-4")
      block header
  block content
  div(class="flex items-center justify-center bg-black")
    div(class="py-4 text-2xl lg:text-lg") &copy; Henrik Zimmermann
